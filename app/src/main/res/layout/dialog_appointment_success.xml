<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_check_circle"
        app:tint="#4CAF50" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt lịch thành công!"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/text_appointment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn đã đặt lịch khám Tim mạch tại Bệnh viện Bạch Mai vào ngày 01/05/2023 lúc 09:30"
        android:textAlignment="center"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng đến trước giờ hẹn 15 phút để hoàn tất thủ tục đăng ký khám bệnh."
        android:textAlignment="center"
        android:textColor="#757575"
        android:textStyle="italic"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_view_appointments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem lịch hẹn"
            android:backgroundTint="#2196F3"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_back_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Về trang chủ"
            android:backgroundTint="#757575" />
    </LinearLayout>
</LinearLayout>
